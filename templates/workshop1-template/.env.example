# Workshop 1: Project Planning Systems - Environment Variables
# Copy this file to .env and configure your values

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
PORT=3001

# Demo Mode - Set to 'false' to use real API integrations
DEMO_MODE=true

# =============================================================================
# GitHub Integration (Optional - Demo mode works without)
# =============================================================================
# Get your token from: https://github.com/settings/tokens
# Required scopes: repo, admin:repo_hook, user
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_USERNAME=your_github_username

# =============================================================================
# DeepInvent.ai Integration (Optional - Demo mode works without)
# =============================================================================
# Sign up at: https://deepinvent.ai/
DEEPINVENT_API_KEY=your_deepinvent_api_key_here

# =============================================================================
# CORS Configuration
# =============================================================================
# Allowed origins for cross-origin requests
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://claude.anthropic.com

# =============================================================================
# Security Settings
# =============================================================================
# JWT Secret for authentication (if implementing user auth)
JWT_SECRET=your_jwt_secret_here

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Logging and Monitoring
# =============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable/disable request logging
LOG_REQUESTS=true

# =============================================================================
# Database Configuration (Future expansion)
# =============================================================================
# If you want to add persistent storage later
DATABASE_URL=your_database_url_here
REDIS_URL=your_redis_url_here

# =============================================================================
# External Services (Future integrations)
# =============================================================================
# For enhanced AI capabilities
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# For advanced project management integrations
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
ASANA_ACCESS_TOKEN=your_asana_access_token_here
TRELLO_API_KEY=your_trello_api_key_here

# =============================================================================
# Development Configuration
# =============================================================================
# Hot reload and development features
DEV_MODE=true
ENABLE_CORS=true
ENABLE_DEBUG_ROUTES=true

# =============================================================================
# Workshop Configuration
# =============================================================================
WORKSHOP_NUMBER=1
WORKSHOP_TITLE="Project Planning Systems"
HACKATHON_EVENT="Organized AI // Vibe Coders Hackathon"
